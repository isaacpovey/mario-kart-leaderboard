{
  "extends": "@tsconfig/vite-react/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "gql.tada/ts-plugin",
        "schema": "http://localhost:8000/graphql",
        "tadaOutputLocation": "./src/lib/graphql-env.d.ts"
      }
    ]
  },
  "include": ["src/**/*", "vite.config.ts"]
}
